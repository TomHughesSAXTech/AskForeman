# Azure Functions Environment Variables Template
# Copy this file to .env and fill in your actual values

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_STORAGE_ACCOUNT;AccountKey=YOUR_STORAGE_KEY;EndpointSuffix=core.windows.net
STORAGE_ACCOUNT_NAME=YOUR_STORAGE_ACCOUNT
STORAGE_ACCOUNT_KEY=YOUR_STORAGE_KEY
STORAGE_CONTAINER_NAME=documents
CHUNKS_CONTAINER_NAME=document-chunks
IMAGES_CONTAINER_NAME=images

# Azure Computer Vision API
COMPUTER_VISION_ENDPOINT=https://YOUR_REGION.api.cognitive.microsoft.com/
COMPUTER_VISION_KEY=YOUR_COMPUTER_VISION_KEY

# Azure Cognitive Search
SEARCH_ENDPOINT=https://YOUR_SEARCH_SERVICE.search.windows.net
SEARCH_API_KEY=YOUR_SEARCH_API_KEY
SEARCH_INDEX_NAME=construction-docs-index
GRAPH_INDEX_NAME=construction-knowledge-graph

# Azure Cosmos DB (Gremlin API)
COSMOS_GRAPH_ENDPOINT=https://YOUR_COSMOS_ACCOUNT.gremlin.cosmos.azure.com:443/
COSMOS_GRAPH_KEY=YOUR_COSMOS_KEY
COSMOS_DATABASE=ConstructionKnowledgeGraph
COSMOS_CONTAINER=Documents

# Azure Form Recognizer
FORM_RECOGNIZER_ENDPOINT=https://YOUR_REGION.api.cognitive.microsoft.com/
FORM_RECOGNIZER_KEY=YOUR_FORM_RECOGNIZER_KEY

# OpenAI API
OPENAI_API_KEY=YOUR_OPENAI_API_KEY
OPENAI_ORG_ID=YOUR_OPENAI_ORG_ID

# Azure Function App Settings
FUNCTION_APP_NAME=askforeman-functions
AZURE_SUBSCRIPTION_ID=YOUR_SUBSCRIPTION_ID
AZURE_RESOURCE_GROUP=askforeman-rg
AZURE_REGION=eastus

# Application Settings
MAX_PDF_SIZE_MB=100
DEFAULT_CHUNK_SIZE_MB=10
MAX_PAGES_PER_CHUNK=50
ENABLE_OCR=true
ENABLE_CROSS_CLIENT_SEARCH=true

# Security
API_KEY=YOUR_CUSTOM_API_KEY
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,http://localhost:3000

# Logging
APPLICATION_INSIGHTS_CONNECTION_STRING=InstrumentationKey=YOUR_KEY;IngestionEndpoint=https://YOUR_REGION.in.applicationinsights.azure.com/
LOG_LEVEL=Information

# Optional: Azure Key Vault (for production)
KEY_VAULT_NAME=askforeman-kv
KEY_VAULT_URI=https://askforeman-kv.vault.azure.net/

# Optional: Redis Cache (for performance)
REDIS_CONNECTION_STRING=YOUR_REDIS_CONNECTION_STRING
ENABLE_CACHING=false

# Optional: Azure Service Bus (for async processing)
SERVICE_BUS_CONNECTION_STRING=YOUR_SERVICE_BUS_CONNECTION_STRING
SERVICE_BUS_QUEUE_NAME=document-processing-queue
